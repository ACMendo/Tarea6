@model Tarea6.Models.User

<br />
@using (Html.BeginForm("CrearU", "User", "POST"))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4.3">
        <div class="card">
            <div class="card-body">
                <h4 class="text-info" align="center">Registro de Estudiante</h4>
                <hr />
                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.Cedula, new { @class = "control-label " })</b>
                    @Html.TextBoxFor(x => Model.Cedula, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.Nombre, new { @class = "control-label" })</b>
                    @Html.TextBoxFor(x => Model.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.Apellido, new { @class = "control-label" })</b>
                    @Html.TextBoxFor(x => Model.Apellido, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <b> @Html.LabelFor(x => Model.Edad, new { @class = "control-label" })</b>
                    @Html.TextBoxFor(x => Model.Edad, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.Telefono, new { @class = "control-label" })</b>
                    @Html.TextBoxFor(x => Model.Telefono, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.Correo, new { @class = "control-label" })</b>
                    @Html.TextBoxFor(x => Model.Correo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.Genero, new { @class = "control-label" })</b>
                    @Html.DropDownList("Genero", new List<SelectListItem>{
                        new SelectListItem{Text="Masculino", Value = "Masculino"},
                        new SelectListItem{Text="Femenino", Value = "Femenino"}},
                        " Seleccionar Género ", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.EstadoCivil, new { @class = "control-label" })</b>
                    <div>
                        @Html.RadioButtonFor(model => model.EstadoCivil, "Casado")
                        Casado |
                        @Html.RadioButtonFor(model => model.EstadoCivil, "Soltero")
                        Soltero |
                        @Html.RadioButtonFor(model => model.EstadoCivil, "Viudo")
                        Viudo |
                        @Html.RadioButtonFor(model => model.EstadoCivil, "Unión Libre")
                        Unión Libre
                    </div>
                    @Html.ValidationMessageFor(model => model.EstadoCivil, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.Hobbys, new { @class = "control-label" })</b>
                    <div>
                        @Html.CheckBox("Hobbys[]", false, new { @value = "Programar" })
                        Programar |
                        @Html.CheckBox("Hobbys[]", false, new { @value = "Leer" })
                        Leer |
                        @Html.CheckBox("Hobbys[]", false, new { @value = "Comer" })
                        Comer |
                        @Html.CheckBox("Hobbys[]", false, new { @value = "Dormir" })
                        Dormir
                    </div>
                    @Html.ValidationMessageFor(model => model.Hobbys, "", new { @class = "text-danger" })
                    <BR />
                </div>
                <input type="submit" class="btn btn-info btn-block" value="Entrar">
            </div>
        </div>
    </div>
</div>

    }

